<div id="distance"></div>
<script src="js/experiment2.js"></script>
<script>
  let participant = "<%- participant %>";
  let types = "<%- types %>".split(",");
  let titles = "<%- titles %>".split(",");
  for (let i = 0; i < types.length; i++) {
    getData(types[i], names, function (data) {
      displayGraph(types[i], data, names, titles[i]);
    });
  };
  
  getDistanceData(function (data) {
    setTimeout(function () {
      Highcharts.chart('distance', {
        chart: {
          plotBackgroundColor: null,
          plotBorderWidth: null,
          plotShadow: true,
          type: 'pie'
        },
        title: {
          text: 'Treadmill Distance Difference From Ground Truth'
        },
        tooltip: {
          pointFormat: 'Difference From Gold Standard: <b>{point.y}</b>'
        },
        plotOptions: {
          pie: {
            allowPointSelect: true,
            cursor: 'pointer',
            dataLabels: {
              enabled: true,
              format: '<b>{point.name}</b>: {point.y} - {point.percentage:.1f} %',
              style: {
                color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
              }
            }
          }
        },
        series: [{
          name: 'Treadmill Distance',
          colorByPoint: true,
          data: [{
            name: 'Fitbit One',
            y: data[4][1],
            sliced: true,
            selected: true
          }, {
            name: 'Fitbit Charge HR',
            y: Math.abs(data[4][2])
          }, {
            name: 'Fitbit Surge',
            y: Math.abs(data[4][3])
          }, {
            name: 'Fitbit Flex 2',
            y: Math.abs(data[4][4])
          }, {
            name: 'Fitbit Charge 2',
            y: Math.abs(data[4][5])
          }]
        }]
      });
    }, 300);
  });
</script>
